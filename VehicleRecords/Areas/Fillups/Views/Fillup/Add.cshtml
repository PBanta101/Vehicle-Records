@model Fillup

<form method="post">
  <input type="hidden" asp-for="@Model.VehicleId" />

  <table class="border border-dark shadow">
    <tr>
      <th class="pl-3 pr-3 pt-2 text-center" colspan="2"> <h3> Add New Fillup </h3> </th>
    </tr>

    <tr>
      <td class="pl-4 pr-4" colspan="2"> <hr /> </td>
    </tr>

    @if (ViewData.ModelState.ErrorCount > 0)
    {
      <tr>
        <th class="pl-3 pr-3" colspan="2">
          <div asp-validation-summary="All" class="text-danger"></div>
        </th>
      </tr>

      <tr>
        <td class="pl-4 pr-4" colspan="2"> <hr /> </td>
      </tr>
    }

    <tr>
      <th class="p-1 pl-3 text-right"> Date: </th>
      <td class="p-1 pr-3"> <input asp-for="Date" required value="@Model.Date?.ToString("yyyy-MM-dd")" /> </td>
    </tr>

    <tr>
      <th class="p-1 pl-3 text-right"> Trip Odometer: </th>
      <td class="p-1 pr-3"> <input asp-for="TripOdometer" required type="number" min="0.1" max="99999.9" step="0.1" value="" /> </td>
    </tr>

    <tr>
      <th class="p-1 pl-3 text-right"> Odometer: </th>
      <td class="p-1 pr-3"> <input asp-for="Odometer" required type="number" min="0" max="1000000" step="1" value="" /> </td>
    </tr>

    <tr>
      <th class="p-1 pl-3 text-right"> Gallons: </th>
      <td class="p-1 pr-3"> <input asp-for="Gallons" required type="number" min="0.001" max="9999.999" step="0.001" value="" /> </td>
    </tr>

    <tr>
      <th class="p-1 pl-3 text-right"> Total Cost: </th>
      <td class="p-1 pr-3"> <input asp-for="TotalCost" required type="number" min="0.01" max="99999.99" step="0.01" value="" /> </td>
    </tr>

    <tr>
      <td class="pl-4 pr-4" colspan="2"> <hr /> </td>
    </tr>

    <tr>
      <td class="pb-3 pl-3 pr-3 text-center" colspan="2">
        <input type="submit" class="btn btn-sm btn-success" value="Add New Fillup" />
        <a asp-area="" asp-controller="Vehicle" asp-action="Detail" asp-route-id="@Model.VehicleId" class="btn btn-sm btn-info">
          Cancel
        </a>
      </td>
    </tr>
  </table>
</form>
